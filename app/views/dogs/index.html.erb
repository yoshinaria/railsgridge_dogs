
<p id="notice"><%= notice %></p>

<table class="table-striped col-md-12">
  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td class="col-md-2">
          <%= image_tag(dog.picture_url(:thumb), class: "image-responsive") unless dog.picture_url(:thumb).blank?  %>
        </td>
        <div>
          <td class="col-md-2"><b><%= dog.name %></b></td>
          <td class="col-md-2"><b><%= dog.age %></b></td class="col-md-2">
          <td class="col-md-2"><%= link_to 'Show', dog %></td class="col-md-2">
          <td class="col-md-2"><%= link_to 'Edit', edit_dog_path(dog) %></td class="col-md-2">
          <td class="col-md-2"><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dog', new_dog_path %>
